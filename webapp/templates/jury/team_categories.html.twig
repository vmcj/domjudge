{% extends "jury/base.html.twig" %}
{% import "jury/jury_macros.twig" as macros %}

{% block title %}Categories - {{ parent() }}{% endblock %}

{% block extrahead %}
    {{ parent() }}
    {{ macros.table_extrahead() }}
{% endblock %}

{% block content %}

    <h1>Categories</h1>

    {{ macros.table(team_categories, table_fields, num_actions, null, "jury_team_categories_delete") }}

    {% if is_granted('ROLE_ADMIN') %}
        <p>
            {{ button(path('jury_team_category_add'), 'Add new category', 'primary', 'plus') }}
            <button type="submit" form="multidelete" class="btn btn-danger" name="multidelete_submit">
                <i class="fa fa-trash"></i> Remove selected categories
            </button>
        </p>
    {% endif %}

{% endblock %}
