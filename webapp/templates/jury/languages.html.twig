{% extends "jury/base.html.twig" %}
{% import "jury/jury_macros.twig" as macros %}

{% block title %}Languages - {{ parent() }}{% endblock %}

{% block extrahead %}
    {{ parent() }}
    {{ macros.table_extrahead() }}
{% endblock %}

{% block content %}

    <h1>Languages</h1>

    {{ macros.table(languages, table_fields, num_actions, null, "jury_languages_delete") }}

    {% if is_granted('ROLE_ADMIN') %}
        <p>
            {{ button(path('jury_language_add'), 'Add new language', 'primary', 'plus') }}
            <button type="submit" form="multidelete" class="btn btn-danger" name="multidelete_submit">
                <i class="fa fa-trash"></i> Remove selected languages
            </button>
        </p>
    {% endif %}

{% endblock %}
