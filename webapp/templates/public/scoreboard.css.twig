{% for color in backgroundColors %}
{% set colorClass = color | replace({"#": "_"}) %}

.cl{{ colorClass | raw }} {
    background-color: {{ color | raw }};
}

{% set cMin = color|hexColorToRGBA(0) %}
{% set cMax = color|hexColorToRGBA(1) %}

.cl{{ colorClass | raw }} .forceWidth.toolong:after {
    background: linear-gradient(to right,
                {{ cMin | raw }} 0%,
                {{ cMax | raw }} 96%);
}
{% endfor %}
